        "receiver": {
          "description": "message receiver login", 
          "type": "string"
        }, 
        "sender": {
          "description": "message sender login", 
          "type": "string"
        }
      }, 
      "required": [
        "sender", 
        "receiver", 
        "message"
      ]
    }, 
    "Token": {
      "properties": {
