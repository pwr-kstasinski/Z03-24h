{
  "openapi": "3.0.0",
  "info": {
    "description": "My first API",
    "version": "1.0.0",
    "title": "ChatApp Server API"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:5000/"
    }
  ],
  "paths": {
    "/get/{username}": {
      "get": {
        "tags": [
          "Receiving messages"
        ],
        "summary": "receiving messages for a specific user",
        "parameters": [
          {
            "name": "username",
            "in": "path",
            "description": "Username of chatapp user",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "messages": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "There's no messages for specific user"
          }
        }
      }
    },
    "/send/{receiver_username}/{message}": {
      "post": {
        "tags": [
          "Sending messages"
        ],
        "summary": "sending a message to a specific user",
        "parameters": [
          {
            "name": "receiver_username",
            "in": "path",
            "description": "Username of message receiver",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "message",
            "in": "path",
            "description": "Message to send",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": {
                  "status": "success"
                }
              }
            }
          }
        }
      }
    }
  }
}